Ddoc

$(T h1,,Schedule)

$(T table, id="schedule" class="green",
  $(T TR,,
      $(T th, colspan="3", Day 1: Wednesday May 2, 2018)
  )
  $(BREAKFAST1)
  $(LUNCH)
  $(END_OF_DAY1)
)

$(T table, id="schedule" class="orange",
  $(T TR,,
    $(T th, colspan="3", Day 2: Thursday May 3, 2018)
  )
  $(BREAKFAST)
  $(LUNCH)
  $(END_OF_DAY2)
)

$(T table, id="schedule" class="purple",
  $(T TR,,
    $(T th, colspan="3", Day 3: Friday May 4, 2018)
  )
  $(BREAKFAST)
  $(LUNCH)
  $(END_OF_DAY3)
)

$(T table, id="schedule" class="aqua",
